@model  List<Project1Portfolio.Models.Skill>
    
@{ 
    ViewBag.Title = "Skilllist";
    Layout = "~/Views/Admin/Index.cshtml";
}


<h2 class="mb-4">Yeteneklerim Listesi</h2> 

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Başlık</th>
        <th>Değer</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach(var item in Model)
    {

        <tr>
            <td>@item.Skillid</td>
            <td>@item.Tittle</td>
            <td>@item.Value</td>
            <td><a href="/Skill/DeleteSkill/@item.Skillid" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-success">Güncelle</a></td>
         
        </tr>
    }

</table>
<a href="/Skill/CreateSkill/" class="btn btn-info">Yeni Yetenek Girişi</a>